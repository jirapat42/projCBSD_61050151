<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>myServlets</servlet-name>
        <servlet-class>controller.myServlets</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addtocartcontroller</servlet-name>
        <servlet-class>controller.addtocartcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>removedvdcartcontroller</servlet-name>
        <servlet-class>controller.removedvdcartcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CocfirmDeleteController</servlet-name>
        <servlet-class>controller.CocfirmDeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartcheckout</servlet-name>
        <servlet-class>controller.cartcheckout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myServlets</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addtocartcontroller</servlet-name>
        <url-pattern>/addtocartcontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>removedvdcartcontroller</servlet-name>
        <url-pattern>/removedvdcartcontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CocfirmDeleteController</servlet-name>
        <url-pattern>/CocfirmDeleteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartcheckout</servlet-name>
        <url-pattern>/cartcheckout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
